with "config/avionics_zephy_fmc_cpp_microcontroller_io_fmc_bridge_mk1_config.gpr";

project Avionics_Zephy_Fmc_Cpp_Microcontroller_Io_Fmc_Bridge_Mk1 is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Avionics_Zephy_Fmc_Cpp_Microcontroller_Io_Fmc_Bridge_Mk1_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("avionics_zephy_fmc_cpp_microcontroller_io_fmc_bridge_mk1.adb");

   package Compiler is
      -- Use Ada 2022 standard
      -- Disable specific style checks that are causing warnings
      for Default_Switches ("Ada") use Avionics_Zephy_Fmc_Cpp_Microcontroller_Io_Fmc_Bridge_Mk1_Config.Ada_Compiler_Switches &
                                     ("-gnat2022");
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Avionics_Zephy_Fmc_Cpp_Microcontroller_Io_Fmc_Bridge_Mk1;